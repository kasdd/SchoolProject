            @Html.DisplayName("Aantal")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Plaats)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {

    <tr>
        <td>
            <img class="tableImg" src="../../Content/Images/@Html.DisplayFor(modelItem => item.Foto)" a>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Artikelnaam)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Omschrijving)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ArtikelNummer)
        </td>
        <td class="text-right">
            @($"{item.Prijs:00.0€}")
        <td>
            
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Uitleenbaar)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Plaats)
        </td>
    </tr>
}

</table>
