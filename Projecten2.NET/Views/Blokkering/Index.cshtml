@model IEnumerable<Projecten2.NET.Models.ViewModels.BlokkeringViewModel>

@{
    ViewBag.Title = "Uw blokkeringen";
}

<h2>Uw Blokkeringen</h2>

@*<p>
        @Html.ActionLink("Create New", "Create")
    </p>*@
<table class="table">

    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Materiaal.Foto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Materiaal.Artikelnaam)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Materiaal.Omschrijving)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Materiaal.Prijs)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Materiaal.Aantal)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Materiaal.Plaats)
        </th>
        <th>
            @Html.DisplayName("Startdatum blokkering")
        </th>
        <th>
            @Html.DisplayName("Einddatum blokkering")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {

        <tr>
            <td>
                <img class="tableImg" src="../../Content/ImagesMinified/@Html.DisplayFor(modelItem => item.Materiaal.Foto)" a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Materiaal.Artikelnaam)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Materiaal.Omschrijving)
            </td>
            <td class="text-right">
                @($"{item.Materiaal.Prijs:0.00€}")
            <td class="text-right">
                @Html.DisplayFor(modelItem => item.Materiaal.Aantal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Materiaal.Plaats)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.beginDatum, "{dd/MM/yyyy}")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.eindDatum, "{dd/MM/yyyy}")
            </td>
            <td>

                @using (Html.BeginForm("RemoveFromBlokkering", "Blokkering", new { voorbehoudingId = item.blokkering.VoorbehoudingId }))
                {
                    <button type="submit" class="btn btn-groen"><span class="glyphicon-remove glyphicon"></span></button>
                }
            </td>


        </tr>
    }


</table>
